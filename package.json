{
  "name": "monstercat-connect-deon",
  "version": "1.0.0",
  "description": "",
  "main": "main.js",
  "scripts": {
    "start": "electron main.js",

    "clean" : "rm -rf dist/*",

    "build": "npm run build:osx && npm run build:win",
    "build:osx": "electron-packager ./app \"Monstercat Connect (Deon)\" --out=dist/osx/ --platform=darwin --arch=x64 --version=1.2.7 --icon=assets/osx/mount.icns && npm run rearrange:osx",
    "build:win": "electron-packager ./app \"Monstercat Connect (Deon)\" --out=dist/win/ --platform=win32 --arch=ia32 --version=1.2.7 --icon=assets/win/icon.ico && npm run rearrange:win",

    "rearrange:osx" : "mv \"./dist/osx/Monstercat Connect (Deon)-darwin-x64/\"* ./dist/osx/ && rm -rf \"./dist/osx/Monstercat Connect (Deon)-darwin-x64/\"",
    "rearrange:win" : "mv \"./dist/win/Monstercat Connect (Deon)-win32-ia32/\"* ./dist/win/ && rm -rf \"./dist/win/Monstercat Connect (Deon)-win32-ia32/\"",
    
    "pack": "npm run clean && npm run pack:osx && npm run pack:win",
    "pack:osx" : "npm run build:osx && electron-builder \"dist/osx/Monstercat Connect (Deon).app\" --platform=osx --out=\"dist/osx\" --config=packager.json",
    "pack:win": "npm run build:win && electron-builder \"dist/win/\" --platform=win --out=\"dist/win\" --config=packager.json"
  },
  "author": "Drake Witt <dwitt@dranweb.com>",
  "license": "MIT",
  "devDependencies": {
    "electron-prebuilt": "^1.2.7"
  }
}